{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"clientKind": "git"
	},
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": true,
		"include": ["src/**/*.ts", "src/**/*.tsx"]
	},
	"organizeImports": {
		"enabled": true,
		"include": ["src/**/*.ts", "src/**/*.tsx"]
	},
	"linter": {
		"enabled": true,
		"include": ["src/**/*.ts", "src/**/*.tsx"],
		"ignore": ["src/assets"],
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "asNeeded"
		}
	}
}
